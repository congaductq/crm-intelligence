{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "outDir": "..",
        "rootDir": "./src",
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}